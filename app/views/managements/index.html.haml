%h1#title 運航管理画面

= form_with url: root_path, method: :get, local: true do |f|
  = f.date_field :date, value: @select_date
  = f.label :time_zone, '(JST)'
  = f.submit '更新'

%table{border: 1}
  %tr
    %th ID
    %th DATE
    %th FLT No.
    %th Ship No.
    %th PIC
    %th CREW
    %th DEP
    %th STD
    %th SPOT
    %th ARR
    %th STA
    %th SPOT
    %th BLX
    %th AD
    %th CH
    %th IN
    %th B/O
    %th T/O
    %th ETA
    %th L/D
    %th B/I
    /%th TTL PAX
    /%th Payload
  - @table_data.each do |datum|
    %tr
      %td= datum[0]       #flight_datum_id
      %td= datum[1]       #date
      %td= datum[2]       #callsign
      %td= datum[4]       #registration
      %td= datum[21]      #pilot_in_command
      %td= datum[13]      #crew_configuration
      %td= datum[5]       #departure
      %td= datum[7]       #scheduled_time_of_departure
      %td= datum[15]      #departure_spot
      %td= datum[6]       #arrival
      %td= datum[8]       #scheduled_time_of_arrival
      %td= datum[14]      #arrival_spot
      %td= datum[9]       #block_time
      %td= datum[10]      #booked_adults
      %td= datum[11]      #booked_children
      %td= datum[12]      #booked_infants
      %td= datum[16]      #block_out
      %td= datum[18]      #take_off
      %td= datum[17]      #estimated_time_of_arrival
      %td= datum[19]      #landing
      %td= datum[20]      #block_in
